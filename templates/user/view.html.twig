{% extends 'base.html.twig' %}

{% block title %}Profil de l'utilisateur {{user.username}}{% endblock %}

{% block body %}
{% for message in app.flashes('success')%}
<div class="alert alert-livequestion">
    {{message}}
</div>
{% endfor %}
<div class="card mb-3">
    <div class="card-body bg-light">
        <div class="row">
            <div class="col text-center">
                <img src="{{ asset('images/profil-picture-illustration.png') }}" class="profil-picture"></img>
            </div>
            <div class="col-8">
                <h6><strong>Pseudo : </strong>{{user.username}}</h6>
            </div>
            {% if app.user.id == user.id %}
                <div class="col">
                    <form method="POST" class="btn livequestion" action="{{path('app_user_delete',{'id':user.id})}}" onsubmit="return confirm('Voulez-vous vraiment supprimer votre profil ?')">
                        <input type="hidden" name="_method" value="delete">
                        <input type="hidden" name="_token" value="{{csrf_token('delete' ~ user.id)}}">
                        <input type="submit" class="btn livequestion" value="Supprimer">
                    </form>
                </div>
            {% endif %}
        </div>
    </div>
</div>
<div class="card mb-3">
    <div class="card-body bg-light text-center">
        <h5>Dernières questions</h5>
    </div>
</div>

{% for question in questions %}
<div class="card mb-3">
    <div class="card-body bg-light">
        <div class="row">
            <div class="col">
                <div class="row">
                    <div class="col-6 text-center">
                        {{ question.answers|length }}
                        <br>
                        <small>Réponses</small>
                    </div>
                    <div class="col-6 text-center">
                        {{ question.views }}
                        <br>
                        <small>Vues</small>
                    </div>
                </div>
            </div>
            <div class="col-9">
                <h5 class="card-title"><a href="{{ path('app_question', { 'id': question.id }) }}">{{ question.question }}</a></h5>
                <p class="card-text text-muted small">posée par <a href="{{ path('app_user', { 'id': question.user.id }) }}">{{ question.user.username }}</a> |  {{ question.created|date("m/d/Y h:i") }}</p>
            </div>
        </div>
    </div>
</div>
{% else %}
<div class="text-center alert alert-livequestion">Pas de questions !</div>
{% endfor %}

{% endblock %}
