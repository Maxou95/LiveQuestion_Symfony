{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-6 offset-3">

            <div class="card bg-light">
                <div class="card-body">
                    <h1 class="h3 mb-3 font-weight-normal text-center">S'inscrire</h1>

                    {{ form_start(form) }}
                        {{ form_row(form.username) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.plainPassword) }}
                        <button class="btn livequestion btn-block">S'inscrire</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
